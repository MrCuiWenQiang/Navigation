<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/main_color" />
            <padding
                android:bottom="14dp"
                android:left="50dp"
                android:right="50dp"
                android:top="14dp" />
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_color_fade" />
            <padding
                android:bottom="12dp"
                android:left="50dp"
                android:right="50dp"
                android:top="12dp" />
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>