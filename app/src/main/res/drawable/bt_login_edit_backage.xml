<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#F9F9F9" />
            <stroke android:color="#E7E7E7" android:width="0.2dp"/>
            <padding
                android:top="6dp"
                android:bottom="6dp"
                android:left="8dp"
                android:right="8dp"
                />
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F9F9F9" />
            <stroke android:color="#E7E7E7" android:width="0.2dp"/>
            <padding
                android:top="6dp"
                android:bottom="6dp"
                android:left="8dp"
                android:right="8dp"
              />
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>