<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="18dp" android:bottomRightRadius="18dp" android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <stroke android:width="0.3dp" android:color="@color/viewfinder_laser" />
            <solid android:color="@color/white" />
            <padding android:bottom="8dp" android:top="8dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="18dp" android:bottomRightRadius="18dp" android:topLeftRadius="18dp" android:topRightRadius="18dp" />
            <stroke android:width="0.3dp" android:color="@color/viewfinder_laser" />
            <solid android:color="@color/french_grey" />
            <padding android:bottom="8dp" android:top="8dp" android:left="10dp" android:right="10dp"/>

        </shape>
    </item>
</selector>