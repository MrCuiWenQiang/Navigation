<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="0.3dp" android:color="@color/white" />
            <solid android:color="@color/blue_1" />
            <padding android:bottom="8dp" android:top="8dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
            <stroke android:width="0.3dp" android:color="@color/white" />
            <solid android:color="@color/blue_2" />
            <padding android:bottom="8dp" android:top="8dp" android:left="10dp" android:right="10dp"/>

        </shape>
    </item>
</selector>