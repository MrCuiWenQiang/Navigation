<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat">
    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="search_ll_style">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/search_backage</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="search_tv">
        <item name="android:textColor">@color/bi_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line">
        <item name="android:background">@color/frenchgrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>
    <style name="losng">
        <item name="android:background">#DCDCDC</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="bt_route">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="open_group">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/click_select</item>
    </style>
    <style name="open_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#7A7A7A</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    <style name="open_line">
        <item name="android:background">#EAEAEA</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="task_group">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="task_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="task_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="basedialog">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bt_up" parent="basedialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bt_update</item>
    </style>
    <style name="base_item_gg">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="base_item_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="base_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_tt">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="item_ll">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="ll_key_value">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="layout_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="layout_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_title_color</item>
    </style>

    <style name="main_tab_d_view">
        <item name="android:background">@color/d_rule</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
</resources>
